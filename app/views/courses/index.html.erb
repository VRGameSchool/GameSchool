<style>
#our-classes {
  padding-top: 75px;
}
.section.interest {
  border: 1px solid black;
}
.section.interest:hover {
  border-bottom: 1px solid red;
}
</style>

<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>

    <% @courses.each do |course| %>

    <div class="section interest" data-package="daily">
      <h2><%= course.name %></h2>
      <p><%= course.date %></p>
      <p>$150</p>
      <p><%= course.description %></p>
      <%= link_to 'Show', course %> | <%= link_to 'Edit', edit_course_path(course) %> | <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>

    <% end %>

<br>

<%= link_to 'New Course', new_course_path %>
