<style>
#our-classes {
  padding-top: 75px;
}
.section.interest {
  border: 1px solid black;
}
.section.interest:hover {
  border-bottom: 1px solid red;
}
</style>

<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>

    <div class="section interest" data-package="daily">
      <h2><%= course.name %></h2>
      <p>$150</p>
      <p>Two night course for beginners</p>
    </div>

      <tr>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= course.date %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
