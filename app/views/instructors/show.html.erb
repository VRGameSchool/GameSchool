<style>
    .instructor-image img {
      height: 150px;
    }
    .section {
      vertical-align: top;
      width: 350px;
      max-height: 600px;
      overflow: hidden;
    }
    .section p {
      text-align: justify;
      line-height: 1.25em;
      padding: 0 20px 0 20px;
    }
</style>

<p id="notice"><%= notice %></p>

<div class="slide" id="meet-us">
  <div class="container">
    <h1>Meet <%= @instructor.first_name %></h1>
    <br />

      <div class="section interest" data-package="daily">
        <div class="instructor-image">
          <%= image_tag("jason.png") %>
        </div>
        <h2><%= @instructor.first_name %> <%= @instructor.last_name %></h2>
        <p><%= @instructor.title %></p>
        <p><%= @instructor.bio %></p>
        <% if current_user.present? %>
          <%= link_to 'Show', @instructor %> |
          <%= link_to 'Edit', edit_instructor_path(@instructor) %> |
          <%= link_to 'Destroy', @instructor, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% else %>
          <a href="http://twitter.com/<%= @instructor.twitter %>">twitter</a> |
          <a href="http://linkedin.com/in/<%= @instructor.linkedin %>">linkedin</a> |
          <a href="http://github.com/<%= @instructor.github %>">github</a>
        <% end %>
      </div>

  </div>
</div>
